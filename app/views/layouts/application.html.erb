<!DOCTYPE html>
<head>
	<title>Cognito: <%= title %></title>	
	<%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults, "application", "jquery.tokeninput", "tabSwitch" %>
	<%= stylesheet_link_tag :defaults, 
							"application", 
							"token-input/token-input-facebook",
							"css/jquery_ui/jquery-ui-1.8.16.custom" , 		
							"general",
							"newTab" %>


</head>
<body>
	<div = "container">
		<%= render 'layouts/header' %>
		<section class="round">
		<% flash.each do |key, value| %>
		  <div class="flash <%= key %>"><%= value %></div>
		<% end %>
		<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>

</body>
</html>